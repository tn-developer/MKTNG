@model mktng.Models.Login
@{
    ViewData["Title"] = "User Login";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/images/mktngicon.png" />
</head>
<main class="page-container">
    <div class="auth-card">
        <div class="text-center mb-4">
            <img src="~/images/1st_topnotch_logo.png" alt="TopNotch Logo" class="img-fluid" style="max-width: 150px;" />
        </div>
        <h4 class="text-center fw-bold mb-4">Login</h4>
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold">Username</label>
                <input asp-for="Username" class="form-input" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-input" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="primary-btn">Login</button>
            </div>
        </form>
        <p class="text-center mt-3">
            <a asp-action="Register" class="link-accent">➕ Create Account</a>
        </p>
    </div>
</main>