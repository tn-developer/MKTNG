    function togglesctk(show, hide, select) {
        var show = document.getElementById(show);
        var hide = document.getElementById(hide);

        show.style.display = "block";
        hide.style.display = "none";

        if (select === "sc") {
            document.getElementById("sitetk").value = null;
            document.getElementById("sitesc").value = document.getElementById("sitesc").options[0].value;
            document.getElementById("sclabel").style.fontWeight = "bold";
            document.getElementById("tklabel").style.fontWeight = "normal";
        }
        if (select === "tk") {
            document.getElementById("sitetk").value = document.getElementById("sitetk").options[0].value;
            document.getElementById("sitesc").value = null;
            document.getElementById("sclabel").style.fontWeight = "normal";
            document.getElementById("tklabel").style.fontWeight = "bold";
        }
    }

    const addsitemodal = document.getElementById('addSiteModal');

    function openConfirmModal() {
        var form = document.getElementById("addsiteform");
        $('#siteConfirmModal').modal('show');
        addsitemodal.style.opacity = '0.7';
    }

    function submitConfirmModal() {
        var form = document.getElementById("addsiteform");
        $('#siteConfirmModal').modal('hide');
        addsitemodal.style.opacity = '1';

        $.ajax({
            url: '/Admin/AddSite',
            type: 'POST',
            data: $(form).serialize(),
            success: function (response) {
                if (response.success) {
                    $('#addSiteModal').modal('hide');
                    location.reload();
                } else {
                    if (response.errors) {
                        var errorMessage = response.errors.join('<br>');
                        $('#addSiteError').html(errorMessage);
                    } else {
                        $('#addSiteError').html('Invalid input');
                    }
                }
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

    function closeConfirmModal() {
        $('#siteConfirmModal').modal('hide');
        addsitemodal.style.opacity = '1';
    }
</script>
